{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "skipLibCheck": true,
      "declaration": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "noEmitOnError": false,
      "noUnusedLocals": true,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false
    },
      "exclude": [
          "node_modules",
          "dist"
      ]
  }